<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="local.tomo.medi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="local.tomo.medi.model.Mediciline"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver
            android:name=".service.Alarm"
            android:process=":remote" />
        <receiver android:name=".service.AutoStart">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".service.MediService"
            android:enabled="true"
            android:process=":mediciline_service" />

        <activity android:name=".user.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".medicament.MedicamentsActivity" />
        <activity
            android:name=".medicament.AddMedicamentActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity android:name=".medicament.MedicamentsDbActivity" />
        <activity android:name=".medicament.MedicamentDbDetailsActivity" />
        <activity android:name=".patient.AddPatientActivity" />
        <activity android:name=".disease.AddDiseaseActivity" />
        <activity android:name=".disease.DiseaseDetailsActivity" />
        <activity android:name=".disease.MedicamentsListActivity" />
        <activity android:name=".disease.DiseasesListActivity" />
        <activity android:name=".medicament.DiseasesInMedicamentActivity" />
        <activity android:name=".patient.LiveCameraActivity" />
        <activity android:name=".disease.AllMedicamentsActivity" />
        <activity android:name=".user.RegisterActivity" />
        <activity android:name=".dosage.DosagesActivity" />
        <activity android:name=".dosage.AddDosageActivity" />
        <activity android:name=".service.NotificationReceiverActivity" />
        <activity android:name=".file.FilesActivity" />
        <activity android:name=".dosage.DosagesInDiseaseActivity"></activity>
    </application>

</manifest>