<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rowAllMedicamentId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="15sp"
        android:visibility="visible">
    </TextView>

    <TextView
        android:id="@+id/rowAllMedicamentIdServer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="15sp"
        android:visibility="visible">
    </TextView>

    <TextView
        android:id="@+id/rowAllMedicamentProductLineID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="15sp"
        android:visibility="invisible">
    </TextView>

    <TextView
        android:id="@+id/rowAllMedicamentPackageID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="15sp"
        android:visibility="invisible">
    </TextView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >


        <ImageView
            android:id="@+id/rowAllMedicamentNoSynchro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_sync_disabled_black_18dp"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/rowAllMedicamentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#0000FF"
           >
        </TextView>



    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rowAllMedicamentProducer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="ddddd"
                android:textColor="#000000">
            </TextView>

            <TextView
                android:id="@+id/rowAllMedicamentPack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="ddddd"
                android:textColor="#000000">
            </TextView>

            <TextView
                android:id="@+id/rowAllMedicamentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="ddddd"
                android:textColor="#000000">
            </TextView>

            <TextView
                android:id="@+id/rowAllMedicamentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="ddddd"
                android:textColor="#000000">
            </TextView>

        </LinearLayout>


        <ImageButton
            android:id="@+id/rowAllMedicamentMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_menu_moreoverflow_normal_holo_light"
            android:background="@null"
            android:layout_marginRight="15dp"
            android:visibility="invisible"/>

    </RelativeLayout>




</LinearLayout>
