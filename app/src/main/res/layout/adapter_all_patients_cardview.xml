<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSinglePatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding = "true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewProfilePic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/textViewPatientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:maxLength="25"
                android:textColor="#DF013A"
                android:layout_toRightOf="@id/imageViewProfilePic" />

            <TextView
                android:id="@+id/textViewBirthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPatientName"
                android:textColor="#000000"
                android:layout_toRightOf="@id/imageViewProfilePic" />

            <TextView
                android:id="@+id/textViewDiseasesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liczba chorÃ³b: "
                android:textColor="#000000"
                android:layout_below="@id/textViewBirthdate"
                android:layout_toRightOf="@id/imageViewProfilePic" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>