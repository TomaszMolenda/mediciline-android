<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".swipe.MedicamentFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/add_icon"
            android:background="@drawable/menu_background_blue"
            android:textColor="#FFFFFF"
            android:id="@+id/buttonMenuMedicamentAdd"
            android:paddingTop="30dp"
            android:drawablePadding="0dp"
            android:text="Dodaj"
            android:textSize="20dp"
            android:layout_margin="2dp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/barcode_icon"
            android:background="@drawable/menu_background_green"
            android:textColor="#FFFFFF"
            android:id="@+id/buttonMenuMedicamentScan"
            android:paddingTop="30dp"
            android:drawablePadding="0dp"
            android:text="Skanuj"
            android:textSize="20dp"
            android:layout_margin="2dp"></Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/drug_icon"
            android:background="@drawable/menu_background_pink"
            android:textColor="#FFFFFF"
            android:id="@+id/buttonMenuMedicamentActive"
            android:paddingTop="30dp"
            android:drawablePadding="0dp"
            android:text="W apteczce\n"
            android:textSize="20dp"
            android:layout_margin="2dp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/trash_icon"
            android:background="@drawable/menu_background_violet"
            android:textColor="#FFFFFF"
            android:id="@+id/buttonMenuMedicamentArchive"
            android:paddingTop="30dp"
            android:drawablePadding="0dp"
            android:text="Zużyte"
            android:textSize="20dp"
            android:layout_margin="2dp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/all_icon"
            android:background="@drawable/menu_background_red"
            android:textColor="#FFFFFF"
            android:id="@+id/buttonMenuMedicamentAll"
            android:paddingTop="30dp"
            android:drawablePadding="0dp"
            android:text="Słownik"
            android:textSize="20dp"
            android:layout_margin="2dp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/overdue_icon"
            android:background="@drawable/menu_background_yellow"
            android:textColor="#FFFFFF"
            android:id="@+id/buttonMenuMedicamentOutOfDate"
            android:paddingTop="30dp"
            android:drawablePadding="0dp"
            android:text="Przeterminowane"
            android:textSize="18dp"
            android:layout_margin="2dp"></Button>

    </LinearLayout>




</LinearLayout>
