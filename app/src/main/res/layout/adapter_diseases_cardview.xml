<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cvSingleDisease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding = "true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zapalenie ucha"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/textViewStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rozpoczęcie "
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_below="@id/textViewName"/>

            <TextView
                android:id="@+id/textViewStopDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zakończenie  "
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_below="@id/textViewStartDate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leki (2)"
                android:textSize="10sp"
                android:textColor="#000000"
                android:id="@+id/textViewDisease"
                android:layout_alignBottom="@+id/textViewStopDate"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>